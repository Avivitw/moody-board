

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Users {
  id    Int     @id @default(autoincrement())
  name String
  email     String  @unique
  moodBoards MoodBoards[]
  
}

model DesignCategories {
  id    Int     @id @default(autoincrement())
  name  String
}

model MoodBoards {
  id    Int     @id @default(autoincrement())
  userId Int
  creator    Users    @relation(fields: [userId], references: [id])
  colorsPlateId Int
  colorsPlate    ColorsPlates    @relation(fields: [colorsPlateId], references: [id])
  accessoryId Int
  accessories     Accessories    @relation(fields: [accessoryId], references: [id])


}

model ColorsPlates {
  id    Int     @id @default(autoincrement())
  image  String
  moodBoards MoodBoards[]

}


model Accessories {
  id        Int      @id @default(autoincrement())
  name     String
  description   String?
  image  String
  accessoryTypeId Int
  accessoriesType     AccessoriesTypes    @relation(fields: [accessoryTypeId], references: [id])
  moodBoards MoodBoards[]

}

model AccessoriesTypes {
  id        Int      @id @default(autoincrement())
  type String
  accessories Accessories[]
}
