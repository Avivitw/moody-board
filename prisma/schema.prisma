

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id    Int     @id @default(autoincrement())
  firstName String
  lastName  String
  email     String  @unique
}

model DesignCategories {
  id    Int     @id @default(autoincrement())
  name  String
}

model MoodBoards {
  id    Int     @id @default(autoincrement())
  creator    User    @relation(fields: [userId], references: [id])
}

model ColorsPlates {
  id    Int     @id @default(autoincrement())
  image  String
  moodboard    MoodBoards    @relation(fields: [moodBoardId], references: [id])
}


model Accessories {
  id        Int      @id @default(autoincrement())
  name     String
  description   String?
  image  String
  moodboard    MoodBoards    @relation(fields: [moodBoardId], references: [id])
  accessoriesType     AccessoriesTypes    @relation(fields: [accessoryTypeId], references: [id])

}

model AccessoriesTypes {
  id        Int      @id @default(autoincrement())
  type String
  
}


model ColorsPlates {
  id    Int     @id @default(autoincrement())
  image  String
  moodboard    MoodBoards    @relation(fields: [moodBoardId], references: [id])
}